@{
    ViewData["Title"] = "Add Issues";
    Layout = "~/Views/Shared/_ISMLayout.cshtml";
}



<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-div {
        margin: 100px auto;
        width: 650px;
        border-radius: 5px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<div class="container mt-5">

    @using (Html.BeginForm("CreateEmp", "Employees", FormMethod.Post, new { @class = "w-100" }))
    {

        <div class="mb-3">
            <label for="EmpName" class="form-label">Employee Name</label>
            <input type="text" class="form-control" name="EmpName" placeholder="Enter Title">
        </div>
        <div class="mb-3">
            <label for="EmpCode" class="form-label">Employee Code:</label>
            <input type="text" class="form-control" name="EmpCode" placeholder="Enter Code">
        </div>

        <div class="mb-3">
            <label for="EmpDesignation" class="form-label">Designation:</label>
            <input type="text" class="form-control" name="EmpDesignation" placeholder="Enter Designation">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    }

</div>




