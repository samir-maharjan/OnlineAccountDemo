@model OnlineAccountDemo.ViewModels.UserInfoVM

@{
    ViewData["Title"] = "Users";
    Layout = null;
}

<h1>Howdy! @Model.Name</h1>
<a href="@Url.Action("Logout","Login")" class="btn btn-danger">Logout</a>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-div {
        margin: 100px auto;
        width: 650px;
        border-radius: 5px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<div class="container mt-5">
    <h2>Details Page</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Account Number:</dt>
                <dd class="col-sm-9">@Model.AccountNumber</dd>

                <dt class="col-sm-3">Total Balance:</dt>
                <dd class="col-sm-9">@Model.TotalBalance</dd>

                <dt class="col-sm-3">Status:</dt>

                @if (Model.Status)
                {
                    <dd class="col-sm-9">Active</dd>
                }
                else
                {
                    <dd class="col-sm-9">Not Active</dd>
                }

            </dl>
        </div>
    </div>

    <a href="@Url.Action("accDeposit","UserAccountDetails", new { id = Model.Id })" class="btn btn-primary">Deposit Amount</a>
    <a href="@Url.Action("accWithdraw","UserAccountDetails", new { id = Model.Id })" class="btn btn-dark">Withdrawl Amount</a>
</div>




 @section Scripts {

}




