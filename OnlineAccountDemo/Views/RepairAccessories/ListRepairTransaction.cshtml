@model IEnumerable<OnlineAccountDemo.Models.RepairAccessories>
@using OnlineAccountDemo.Models;

@{
    ViewData["Title"] = "Brand List";
    Layout = "~/Views/Shared/_ISMLayout.cshtml";

    var brandModelList = ViewBag.ModelList as List<BrandModel>;
}


<div class="container mt-5">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Model</th>
                <th scope="col">IMEI Number</th>
                <th scope="col">Color</th>
                <th scope="col">Battery Percent</th>
                <th scope="col">Issue</th>
                <th scope="col">Employee</th>
                <th scope="col">Status</th>
                <th scope="col">Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var _brands in Model.GroupBy(x => x.BrandId))
            {
                <tr>
                    <td colspan="9"><h4><span class="badge bg-dark">@_brands.Select(x=>x.BrandCategory.BrandTitle).FirstOrDefault()</span></h4></td>
                </tr>

                @*                foreach (var _models in item.GroupBy(x => x.ModelId))
            {*@
                foreach(var item in _brands.OrderBy(x=>x.ModelId))
                {
                    <tr>
                        <td>@brandModelList!.Where(x=>x.Id == item.ModelId).Select(x=>x.ModelTitle).FirstOrDefault()</td>
                        <td>@item.IMEINumber</td>
                        <td>@item.ModelColor.ColorTitle</td>
                        <td>@item.BatteryPercent</td>
                        <td>@item.ModelIssues.IssueTitle</td>
                        <td>@item.Employees.EmpName</td>
                        <td>@item.JobStatus.StatusTitle</td>
                        <td>@item.Price</td>
                        <td></td>
                    </tr>
                }
            
                @*   }*@



            }

        </tbody>
    </table>
</div>


@section Scripts {

}




