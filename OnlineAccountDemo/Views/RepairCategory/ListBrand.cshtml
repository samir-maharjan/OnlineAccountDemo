@model IEnumerable<OnlineAccountDemo.Models.BrandCategory>

@{
    ViewData["Title"] = "Brand List";
    Layout = "~/Views/Shared/_ISMLayout.cshtml";
}

<div class="container">
    <a href="@Url.Action("CreateBrand","RepairCategory")" class="btn btn-outline-success btn-lg bx-pull-right"><i class="bx bx-plus-medical"></i></a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Brand Title</th>
                <th scope="col">Brand Code</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BrandTitle</td>
                    <td>@item.BrandCode</td>
                    <td>@item.Status</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("UpdateBrand", new { id=item.Id})"><i class="bi bi-box-arrow-up"></i></a>
                        <a class="btn btn-outline-danger btn-sm" href="@Url.Action("DeleteBrand", new { id=item.Id})"><i class="bx bx-minus-circle"></i></a>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


@section Scripts {

}




