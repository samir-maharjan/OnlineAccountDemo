@{
    Layout = null;
    ViewData["Title"] = "Welcome";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-div {
        margin: 100px auto;
        width: 650px;
        border-radius: 5px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<div class="d-flex gap-5 align-items-center p-4 main-div">
    <h5>Welcome To My Bank</h5>
    <a href="@Url.Action("Index","Login")" class="btn btn-primary w-100">Sign In</a>
    <a href="@Url.Action("Create","Users")" class="btn btn-dark w-100">Sign Up</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
