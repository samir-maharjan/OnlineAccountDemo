
@{
    ViewData["Title"] = "Add Issues";
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-div {
        margin: 100px auto;
        width: 650px;
        border-radius: 5px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<div class="container mt-5">
    
    @using (Html.BeginForm("CreateIssues", "Issues", FormMethod.Post, new { @class = "w-100" }))
    {

        <div class="mb-3">
            <label for="IssueTitle" class="form-label">Issue Title</label>
            <input type="text" class="form-control" name="IssueTitle" placeholder="Enter Title">
        </div>
    <div class="mb-3">
            <label for="IssueCode" class="form-label">Color Code:</label>
            <input type="text" class="form-control" name="IssueCode" placeholder="Enter Code">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    }

</div>




