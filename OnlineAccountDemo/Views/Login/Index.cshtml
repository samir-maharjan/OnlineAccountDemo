@{
    ViewData["Title"] = "Users Login";
    Layout = null;
}

<h1>Login</h1>
<a href="@Url.Action("Index","Home")" class="btn btn-danger">Back</a>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-div {
        margin: 100px auto;
        width: 650px;
        border-radius: 5px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>

<div class="d-flex gap-5 align-items-center p-4 main-div">

    @*    <form class="w-100" asp-controller="Login" asp-action="authUser" method="post">



    </form>
    *@
    @using (Html.BeginForm("authUser", "Login", FormMethod.Post, new { @class = "w-100" }))
    {
        <label class="form-label">Email:</label>
        <input type="text" name="email" class="form-control" placeholder="Enter Your Email">
        <label class="form-label">Password:</label>
        <input type="password" name="password" class="form-control" placeholder="Enter your password">
        <button type="submit" class="btn btn-success w-100">Submit</button>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
